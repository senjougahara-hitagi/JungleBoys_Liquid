<% if @comment.parent_id == nil %>
console.log('edit comment');
$('#comment_<%= @comment.id %>').empty();
$('#comment_<%= @comment.id %>')
.append("<%= escape_javascript(render partial: 'comment_edit', locals: {comment: @comment}) %>");
<% else %>
console.log('edit reply');
$('#reply_<%= @comment.parent_id %>_<%= @comment.id %>').empty();
$('#reply_<%= @comment.parent_id %>_<%= @comment.id %>')
.append("<%= escape_javascript(render partial: 'reply_edit', locals: {comment: @comment}) %>")
.fadeIn(200);
<% end %>